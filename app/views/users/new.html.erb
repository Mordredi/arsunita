<% if @artist %>
  <h1>New Arts Worker</h1>
<% else %>
  <h1>New User</h1>
<% end %>

<%= form_for @user do |f| %>
  <%= render 'form', :f => f %>
  <%= f.label :email, "Email" %>
  <%= f.email_field :email %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <%= f.button "Create Profile" %>
<% end %>