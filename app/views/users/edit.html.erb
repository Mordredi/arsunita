<div class="container">
<%= form_for @user do |f| %>
  <%= render 'form', :f => f %>
  <% if current_user.arts_worker? %>
    <%= f.label :profession, "Profession" %>
    <%= f.text_field :profession %>
  <% end %>
  <%= f.label :avatar, "Avatar" %>
  <%= f.file_field :avatar %>
  <%= f.hidden_field :avatar_cache %>
  <%= f.button %>
<% end %>
</div>