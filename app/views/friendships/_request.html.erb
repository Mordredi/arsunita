<div id="requests" class="container-lrg">
  <h2>Requests</h2>
  <div class="container">
    <% @requests.each do |request| %>
      <% friender = request.friender %>
      <div class="container-sm">
        <p><%= link_to "#{friender.full_name}", user_path(friender), :class => 'user-link' %></p>
        <%= link_to friendship_path(request), :class => 'confirm' do %>
          &check;
        <% end %>
        <%= link_to friendship_path(request), :class => 'reject' do %>
          &#65794;
        <% end %>
      </div>
    <% end %>
  </div>
</div>